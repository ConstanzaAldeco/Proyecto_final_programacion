import pandas as pd
from figuras import rectangulo, triangulo, circulo

# Leer CSV
df = pd.read_csv("figuras.csv")
print("El archivo ha sido leído")

# Recorrer filas y calcular
for index, row in df.iterrows():
    figura = row['FIGURA']
    m1 = row['MEDIDA1']
    m2 = row.get('MEDIDA2', 0)  # MEDIDA2 puede no existir para círculos

    if figura == "r":
        area, perimetro = rectangulo(m1, m2)
    elif figura == "t":        area, perimetro = triangulo(m1, m2)
    elif figura == "c":
        area, perimetro = circulo(m1)

    print(f"Fila {index}: FIGURA={figura}, Área={area}, Perímetro={perimetro}")

















































